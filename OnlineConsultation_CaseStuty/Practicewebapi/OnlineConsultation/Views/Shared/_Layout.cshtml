<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Kendo/styles")
    @Scripts.Render("~/Kendo")
    <!--This bundle was moved by the Telerik VS Extensions for compatibility reasons-->
    @Scripts.Render("~/bundles/jquery")
    <link href="https://cdn.kendostatic.com/2021.3.1207/styles/kendo.bootstrap-urban.min.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="https://cdn.kendostatic.com/2021.3.1207/js/jquery.min.js"></script>
    <script src="https://cdn.kendostatic.com/2021.3.1207/js/jszip.min.js"></script>
    <script src="https://cdn.kendostatic.com/2021.3.1207/js/kendo.all.min.js"></script>
    <script src="https://cdn.kendostatic.com/2021.3.1207/js/kendo.aspnetmvc.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:azure;height:10%;border-block-color:white">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home/Index" class="navbar-brand"> <img src="~/Images/HospLogo1.png" alt="Hospital logo" style="height:35px; width:180px" /></a>
                @*@Html.ActionLink("Online Consultation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <img src="~/Images/HospLogo.png" alt="Company logo" width="80" height="50" />*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right!important">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Appointments", "GetBookingsbyDoctorId", "Booking")</li>
                        <li>@Html.ActionLink("FeedBack", "GetFeedBackbyDoctorId", "FeedBack")</li>
                        <li>@Html.ActionLink("PrescriptionList", "GetPrescriptionbyDoctorId", "Prescription")</li>
                        <li>@Html.ActionLink("Doctor List", "GetAllDoctors", "DoctorLogin")</li>
                        <li>@Html.ActionLink("Logout", "SignIn", "DoctorLogin")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p><br />&copy; @DateTime.Now.Year - Online Consultation</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
