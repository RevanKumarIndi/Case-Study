@model OnlineConsultation.Models.DoctorLogin
@{
    ViewBag.Title = "SignIn";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p style="height:10px"></p>
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-5 col-lg-6 col-xl-5">
                    <img src="~/Images/login.jpg" class="img-fluid" alt="image" style="height:80%;width:80%">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form>
                        <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                            <div class="form-horizontal" style="text-align:center" id="RegisterForm">
                                <div id="validation-summary"> </div>
                                <h1 style="color: darkorange"><b><i><u>Please Login</u></i></b></h1>

                                <div class="form-group">
                                    <div class="col-md-20">
                                        @*@(Html.TextBoxFor(Model => Model.DoctorName))*@

                                        @(Html.Kendo().TextBoxFor(model => model.DoctorName)
                                        .Name("DoctorName")
                                        .Label(label => label.Content("DoctorName").Floating(true))
                                        .HtmlAttributes(new
                                        {
                                            placeholder = " Enter a DoctorName",
                                            //    @class = "form-control",
                                            required = "required",
                                            style = "width: 100%;height:30px;border-radius: 8px;border-color: #ff4d41;"
                                        })
                                        )
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-20">
                                        @(Html.Kendo().TextBoxFor(model => model.Password)
                                            .Name("Password")
                                            .Label(label => label.Content("Password").Floating(true))
                                            .HtmlAttributes(new
                                            {
                                                type = "password",
                                                placeholder = "Enter a Password",
                                                //@class = "form-control",
                                                required = "required",
                                                style = "width: 100%;height:30px;border-radius: 8px;border-color: #ff4d41;"
                                            })
                                            )
                                    </div>
                                </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-0 col-md-20">
                                            <button type="submit" value="Login" class="btn btn-success" id="ButtonSubmit">Login</button>
                                        </div>
                                    </div>
                                <div class="form-group">
                                    <div class="col-md-20" style="color:red">
                                        <label>@ViewData["Message"]</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-0 col-md-20" style="color:darkorange">
                                        <label>If You are a New-- Please Register!!</label><br />
                                        <div class="col-md-offset-0 col-md-30" style="font-size:large">
                                            @Html.ActionLink("Register >>", "SignUp", "", new { @class = "btn btn-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
}

<script>
    $(function () {
        $("form").kendoValidator();
    });
</script>

