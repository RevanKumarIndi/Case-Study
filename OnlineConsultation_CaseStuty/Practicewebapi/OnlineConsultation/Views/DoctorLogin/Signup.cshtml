@model OnlineConsultation.Models.Doctor

@{
    ViewBag.Title = "Signup";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p style="height:10px"></p>
    <section class="vh-100" style="background-color: white;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <div class="form-horizontal" style="text-align:center">
                                        <h1 style="color: darkorange"><b><i><u>Please Register</u></i></b></h1>
                                        <form class="mx-1 mx-md-4">
                                            <div class="form-group">
                                                <div class="col-md-20">
                                                    @(Html.Kendo().TextBoxFor(model => model.DoctorName)
                                                        .Name("DoctorName")
                                                        .Label(label => label.Content("DoctorName").Floating(true))
                                                        .HtmlAttributes(new
                                                        {
                                                            placeholder = " Enter a DoctorName",
                                                            //@class = "form-control",
                                                            required = "required",
                                                            style = "width: 100%;height:30px;border-radius: 8px;border-color: #ff4d41;"
                                                        })
                                                    )
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-20">
                                                    @(Html.Kendo().TextBoxFor(model => model.Gender)
                                                        .Name("Gender")
                                                        .Label(label => label.Content("Gender").Floating(true))
                                                        .HtmlAttributes(new
                                                        {
                                                            placeholder = "Enter a Gender",
                                                            //@class = "form-control",
                                                            required = "required",
                                                            style = "width: 100%;height:30px;border-radius: 8px;border-color: #ff4d41;"
                                                        })
                                                        )
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-20">
                                                    @(Html.Kendo().TextBoxFor(model => model.Specilization)
                                                        .Name("Specilization")
                                                        .Label(label => label.Content("Specilization").Floating(true))
                                                        .HtmlAttributes(new
                                                        {
                                                            placeholder = "Enter a Specilization",
                                                            //@class = "form-control",
                                                            required = "required",
                                                            style = "width: 100%;height:30px;border-radius: 8px;border-color: #ff4d41;"
                                                        })
                                                        )
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-20">
                                                    @(Html.Kendo().TextBoxFor(model => model.PhNo)
                                                        .Name("PhNo")
                                                        .Label(label => label.Content("PhNo").Floating(true))
                                                        .HtmlAttributes(new
                                                        {
                                                            placeholder = "Enter a PhNo",
                                                            //@class = "form-control",
                                                            required = "required",
                                                            style = "width: 100%;height:30px;border-radius: 8px;border-color: #ff4d41;"
                                                        })
                                                        )
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-20">
                                                    @(Html.Kendo().TextBoxFor(model => model.Email)
                                                        .Name("Email")
                                                        .Label(label => label.Content("Email").Floating(true))
                                                        .HtmlAttributes(new
                                                        {
                                                            placeholder = "Enter a Email",
                                                            //@class = "form-control",
                                                            required = "required",
                                                            style = "width: 100%;height:30px;border-radius: 8px;border-color: #ff4d41;"
                                                        })
                                                        )
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-20">
                                                    @(Html.Kendo().TextBoxFor(model => model.Password)
                                                        .Name("Password")
                                                        .Label(label => label.Content("Password").Floating(true))
                                                        .HtmlAttributes(new
                                                        {
                                                            type="password",
                                                            placeholder = "Enter a Password",
                                                            //@class = "form-control",
                                                            required = "required",
                                                            style = "width: 100%;height:30px;border-radius: 8px;border-color: #ff4d41;"
                                                        })
                                                        )
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-0 col-md-20">
                                                    <button type="submit" value="Register" class="btn btn-success" id="ButtonSubmit">Register</button>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-0 col-md-20" style="color:darkorange;animation-fill-mode:backwards">
                                                    <label>If You already Registered--Please Login!!</label><br />
                                                    <div class="col-md-offset-0 col-md-20" style="font-size: large">
                                                        @Html.ActionLink("Login >>", "SignIn", "", new { @class = "btn btn-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="~/Images/6.jpg" class="img-fluid" alt="image" style="height:300px;width:400px">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


<script>
        $(function () {
            $("form").kendoValidator();
        });
</script>